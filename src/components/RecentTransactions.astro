---
const {receiver,reason,amount} = Astro.props;
---
<div class='transaction flex flex-row gap-3 items-center justify-between text-slate-500 col-span-1 bg-slate-600 p-2 px-3 rounded-sm'>
	<div class='data text-slate-200'>
		<h2 class='text-lg font-bold'>{receiver}</h2>
		<h3 class='text-sm'>{reason}</h3>
	</div>
	<div class="amount data-[type='+']:text-green-300 data-[type='-']:text-red-400 font-semibold" data-type={`${amount < 0 ? '-' : '+'}`}>
		Rs.{amount}
	</div>
</div>
