---
const {userImg} = Astro.props;
---
<section class='h-[var(--topbar-height)] flex flex-row items-center'>
	<div class='topbar w-full  justify-between py-2 border-b border-b-slate-600'>

		<div class='icon flex flex-row items-center gap-2 px-4 text-slate-400 font-bold text-lg'>
			<img class='w-[40px]' src="https://cibt-student-portal.vercel.app/assests/images/official/logo2.png" />
			<h2>Dashboard</h2>
		</div>

		<form class='w-full px-4'>
			<input class='w-full max-w-[400px] min-w-[250px] h-full rounded-sm bg-slate-600 p-2 font-semibold text-white' type='search' placeholder='Search...'/>
		</form>
		<div class='profile block ml-auto px-4'>
			<img class='w-[40px]' src={userImg}/>
		</div>

	</div>
</section>
<style>
.topbar {
	display:grid;
	grid-template-columns: var(--left-nav-width) 1fr 1fr;
}
</style>
